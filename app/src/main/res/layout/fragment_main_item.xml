<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <ImageView
        android:id="@+id/fragment_main_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingRight="10dip"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fragment_main_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textTitleColor"
                android:textStyle="bold"
                android:textSize="@dimen/section_article_size"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fragment_main_subsection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textTitleColor"
                android:textStyle="bold"
                android:textSize="@dimen/subsection_article_size"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fragment_main_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/subsection_article_size"
                android:gravity="right"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_main_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/title_article_size"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>